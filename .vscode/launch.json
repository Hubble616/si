{
    "version": "0.2.0",
    "compounds": [
      {
        "name": "Launch",
        "configurations": ["Launch server", "Launch client"]
      }
    ],
    "configurations": [
      {
        "name": "Launch client",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/a.out",
        "args": ["localhost", "9999"],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Compile client",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      {
        "name": "Launch server",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/tiny",
        "args": ["8080", "16"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "Compile server",
        "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
    
}
